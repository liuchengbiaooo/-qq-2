  line-height: 52rpx;
  padding:0 14rpx;
}
.column_statusRight{
  margin-right: 12rpx;
}
.column_content{
  display: flex;
}
.column_listen_btn{
  width: 118rpx;
  height: 52rpx;
  background: #e7d900;
  font-size: 22rpx;
  color: #585858;
  text-align: center;
  line-height: 52rpx;
  border-radius: 30rpx;
  margin-right: 56rpx;
  /*font-weight: bold;*/
  padding: 0 14rpx;
}
.column_author{
  max-width: 140px;
  font-size: 22rpx;
  color: #797979;
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;

}
.titleBox{
  display: flex;
  justify-content: space-between;
}
.titleright{
  font-size: 18rpx;
  color: #848484;
  margin-right: 56rpx;
}
.pinlvList_heat{
  font-size: 22rpx;
  color: #797979;
}
.order_column{
  width: 116rpx;
  height: 40rpx;
  font-size: 22rpx;
  margin: 8rpx auto 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  position: relative;
}
.order_column>button,.column_btn>button{
	width:100%;
	height:100%;
	opacity:0;
	position: absolute;
	left:0;
	top:0;
}
.order_colbtn{
  color: #585858;
  background: #e7d900;
}
.ordered{
  background: #b2b2b2;
  color: #959595;
}
.append{display:block;text-align:center;padding: 25rpx 0; font-size: 30rpx;}