/* pages/index.wxss */
@import '../../utils/refreshView.wxss';

.login{
	margin:30rpx 26rpx 0 26rpx;
	height:357rpx;
	background:rgba(172,172,172,.2);
	border-radius:10px;
	padding-top:40rpx;
	box-sizing: border-box;
	margin-bottom:43rpx;
}
.login_img{
    width:183rpx;
    height:183rpx;
    margin:0 auto;
	margin-bottom:25rpx;
}
.login_img>image{
    width:100%;
    height:100%;
}
.login_wenzi_big{
    width:420rpx;
    margin:0 auto;
    height:auto;
    overflow: hidden;
    position: relative;
}
.login_wenzi_big>button{
    position: absolute;
    left:0;
    top:0;
    width:100%;
    height:100%;
    opacity:0;
}
.login_wenzi{
    height:40rpx;
    line-height:40rpx;
    font-size:28rpx;
    text-align: center;
	color:rgba(149,149,149,1);
}
.login_border{
    font-size:22rpx;
	color:#B8B7B7;
	margin-top:10rpx;
	margin-bottom:10rpx;
	text-align: center;
}
.login_border>view{
	display:inline-block;
	width:50rpx;
	height:2rpx;
	background-color:#B8B7B7;
	margin-bottom:5rpx;
}
.location{
	height:35rpx;
	width:100%;
	margin-bottom:12rpx;
	margin-top:12rpx;
	padding: 0 36rpx;
}
.location>image{
	height:35rpx;
	width:35rpx;
	float: left;
}
.location>text{
	color: #ED9898;
	font-size:24rpx;
	display: inline-block;
	float: left;
	height:35rpx;
	line-height:35rpx;
	margin-left:10rpx;
}