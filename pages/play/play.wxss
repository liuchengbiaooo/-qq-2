.play_danmu {
	position: absolute;
	left: 0;
	top: 325rpx;
	height: 450rpx;
	width: 100%;
}

.aon {
	overflow: hidden;
	width: auto;
	height:auto;
	font-size: 28rpx;
	position: absolute;
	white-space: nowrap;
	/* 防止向下换行*/
	animation-timing-function: linear;
	animation-fill-mode: none;
	background-color: rgba(0, 0, 0, .5);
