/* pages/components/chat-box/chatbox.wxss */

.chatbox{
	height:auto;
	width:100%;
	display:flex;
	overflow: hidden;
	margin-bottom:20rpx;
}

.chatbox_left{
	width:85rpx;
	height:100%;
}

.chatbox_left_icon{
	height:70rpx;
	width:70rpx;
	background-color: #fff;
	border-radius:50%;
	padding:2rpx;
	box-sizing: border-box;
}

.chatbox_left_icon>image{
	width:100%;
	height:100%;
	border-radius:50%;
}
.chatbox_right{
	flex: 1;
	height:100%;
}
.chatbox_right_top{
	font-size:24rpx;
	font-weight:400;
	color:rgba(211,211,211,1);
	display: flex;
	align-items: center;
	overflow: hidden;
}

.chatbox_right_top_bq{
	width:66rpx;
	height:35rpx;
	background:rgba(214,132,52,1);
	border-radius:14rpx;
	display:inline-block;
	margin-right:10rpx;
	color: #EDD4D4;
	font-size:18rpx;
	font-weight:bold;
	text-align: center;
	line-height:35rpx;
}

.chatbox_right_bouttom{
	margin-top:10rpx;
	border-radius:12rpx;
	display: inline-block;
	padding:10rpx 15rpx;
	box-sizing: border-box;
	background:rgba(18,18,18,.4);
	font-size:28rpx;
	font-weight:400;
	word-break: break-all;
}
.chatbox_system{
	font-size:28rpx;
	font-weight:400;
	padding:10rpx 15rpx;
	display:inline-block;
	background:rgba(18,18,18,.4);
	color:#DABC55;
	margin-top:10rpx;
	border-radius:12rpx;
	margin-left:85rpx;
}

.chatbox_right_bouttom>image{
	display: inline-block;
	height:50rpx;
	width:50rpx;
}